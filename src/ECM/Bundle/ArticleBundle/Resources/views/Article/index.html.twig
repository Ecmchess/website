{% extends 'ECMHomeBundle::layout.html.twig' %}

{% block body -%}
    <h1>Liste Article</h1>

    <table class="table table-striped table-hover ">
        <thead>
        <tr>
            <th>Titre</th>
            <th>Actions</th>
            <th>Menu</th>
            <th>Etat</th>
            <th>Motif</th>
        </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td>{{ entity.titre }}</td>


                <td>
                    <ul>
                        <li>
                            <a href="{{ path('article_show', { 'id': entity.id }) }}">Voir / Modifier</a>
                        </li>
                        <li>
                            <a href="{{ path('article_delete', { 'id': entity.id }) }}">Supprimer</a>
                        </li>
                    </ul>
                </td>
                <td>{{ entity.menu }}</td>
                <td>{{ entity.nomEtat }}</td>
                <td>
                    {% if entity.estRefuse %}{{ entity.motif }}
                    {% endif %}
                </td>

            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}
