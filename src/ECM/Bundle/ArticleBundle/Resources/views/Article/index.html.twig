{% extends 'ECMHomeBundle::layout.html.twig' %}

{% block body -%}
    <h1>Liste Article</h1>

    <table class="table table-condensed">
        <thead>
            <tr>
                <th>Titre</th>
                <th>Actions</th>
                <th>Etat</th>
            </tr>
        </thead>
        <tbody>
            {% for entity in entities %}
                <tr>
                    <td>{{ entity.titre }}</td>


                    

                    <td>
                        <ul>
                            <li>
                                <a href="{{ path('article_show', { 'id': entity.id }) }}">Voir / Modifier</a>
                            </li>
                            <li>
                                <a href="{{ path('article_delete', { 'id': entity.id }) }}">Supprimer</a>
                            </li>
                        </ul>
                    </td>
                    <td>{{ entity.accepte}}</td>
                    
                </tr>
            {% endfor %}
        </tbody>
    </table>
{% endblock %}
