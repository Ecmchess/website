{% extends 'ECMHomeBundle::layout.html.twig' %}

{% block body -%}
    <h1>Article</h1>

    <table class="table table-striped table-hover ">
        <tbody>
        <tr>
            <th>Titre</th>
            <td>{{ entity.titre }}</td>
        </tr>
        <tr>
            <th>Corps</th>
            <td>{{ entity.corps | raw }}</td>
        </tr>


        {% if entity.estRefuse %}
            <tr>
                <th>Motif</th>
                <td>{{ entity.motif }}</td>
            </tr>

        {% endif %}

        </tbody>
    </table>

    <ul class="record_actions">
        <li>
            <a href="{{ path('ecm_articles_show_by_util') }}">
                Retourner Ã  la liste d'article
            </a>
        </li>
        <li>
            <a href="{{ path('article_edit', { 'id': entity.id }) }}">
                Modifier
            </a>
        </li>
        <li>
            <a href="{{ path('article_delete', { 'id': entity.id }) }}">
                Supprimer
            </a>
        </li>
    </ul>
{% endblock %}
